<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" />
  <link rel="stylesheet" href="/css/app.css" type="text/css" />
  <link rel="stylesheet" href="/css/style2.css" type="text/css" />
  <title><%= appname %></title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <div class="w-100 d-flex justify-content-between align-items-center">
      <div>
        <a class="navbar-brand mr-4" href="/shop"><i class="fa fa-opencart" aria-hidden="true"></i> <%= appname %> </a>
      </div>
      <div style="flex: 100%" class="mx-4">
        <form action="/shop" method="GET">
          <input type="text" name="search" class="form-control form-control-lg search" placeholder="Search for properties...">
        </form>
      </div>
      <button class="navbar-toggler" data-target="#my-nav" data-toggle="collapse" aria-controls="my-nav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="my-nav" class="collapse navbar-collapse ml-lg-4">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a style="font-size: 24px;" class="nav-link" href="/shop/cart"><i class="fa fa-shopping-basket" aria-hidden="true"></i> <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active mx-md-2">
            <a style="font-size: 24px;" class="nav-link" href="/shop/orders"><i class="fa fa-truck"  aria-hidden="true"></i> <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a style="font-size: 24px;" class="nav-link" href="/shop/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> <span class="sr-only">(current)</span></a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav> 
<main class="main">
  <div class="container">
    <div class="row py-4">
      <div class="col-lg-9 p-4">
        <div class="row">
          <div class="col-12 bg-white p-4 mb-4">
            <h5 class="my-4">Property Information</h5>
            <h4><%= property.title %></h4>
            <p><%= property.address + ", " + property.city %></p>
            <small>Property ID: <%= property._id %></small>
          </div>

          <div class="col-12 p-4 mb-4 bg-white" style="position: relative;">
            <h5 class="mb-4">Gallery</h5>
            <!-- Slideshow container -->
            <div class="slideshow-container">
              <!-- Full-width images with number and caption text -->
              <% property.images.forEach( image => { %>
                <div class="mySlides fade">
                  <div class="numbertext">1 / 3</div>
                  <img src='<%= image %>' style="width:100%; height: 444px;">
                  <div class="text">Caption Text</div>
                </div>
              <% }) %>
              <!-- Next and previous buttons -->
              <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
              <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>
            <!-- The dots/circles -->
            <div style="text-align:center">
              <span class="dot" onclick="currentSlide(1)"></span>
              <span class="dot" onclick="currentSlide(2)"></span>
              <span class="dot" onclick="currentSlide(3)"></span>
            </div>
          </div>

          <div class="col-12 mb-4 p-4 bg-white">
            <h5 class="my-4">Description</h5>
            <div class="row">
              <div class="col-12">
                <p><%= property.description %></p>
              </div>
            </div>
          </div>

          <div class="col-12 mb-4 p-4 bg-white">
            <h5 class="my-4">Features</h5>
            <div class="row">
              <div class="col-4">
                <div class="d-flex">
                  <div class="icon-div text-primary display-4">
                    <i class="fa fa-object-group" aria-hidden="true"></i>
                  </div>
                  <div>
                    <strong class="d-block">Area</strong>
                    <span><%= property.size %></span>
                  </div>
                </div>
              </div>
              <div class="col-4">
                <div class="d-flex">
                  <div class="icon-div text-primary display-4">
                    <i class="fa fa-bed" aria-hidden="true"></i>
                  </div>
                  <div>
                    <strong class="d-block">Bedrooms</strong>
                    <span><%= property.bedrooms %></span>
                  </div>
                </div>
              </div>
              <div class="col-4">
                <div class="d-flex">
                  <div class="icon-div text-primary display-4">
                    <i class="fa fa-bath" aria-hidden="true"></i>
                  </div>
                  <div>
                    <strong class="d-block">Bathrooms</strong>
                    <span><%= property.bathrooms %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="col-lg-3 p-4">
        <div class="row">
          <div class="col-12 p-3 mb-4 bg-white">
            <h2 class="text-primary">&#8358; <%= property.price %></h2>
            <div class="mt-1">
              <a href='<%= "/shop/cart/add?property_id=" + property._id + "&cart_item_qty=1" %>' class="btn-block btn-sm btn btn-primary">Add to cart</a>
            </div>
          </div>

          <div class="col-12 p-3 p-4 bg-white">
            <h6>Posted By Agent / Broker</h6>
            <div class="display-1">
              <i class="fa fa-user-times" aria-hidden="true"></i>
            </div>
            <p class="font-weight-bold">Test</p>
            <p><i class="fa fa-phone" aria-hidden="true"></i> 09093838332</p>
            <p><i class="fa fa-envelop-o" aria-hidden="true"></i> test@email.com</p>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  let slideIndex = 0;
  showSlides();

  function showSlides() {
    let i;
    let slides = document.getElementsByClassName("mySlides");
    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
    }
    slideIndex++;
    if (slideIndex > slides.length) {slideIndex = 1}
    slides[slideIndex-1].style.display = "block";
    setTimeout(showSlides, 3400); // Change image every 2 seconds
  }
</script>

</main>

</body>
</html>
