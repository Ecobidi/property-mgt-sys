<%- include ('../partials/shop') %>

<div class="row">
  <div class="col-12 jumbotron">
    <h2 class="text-center">My Orders</h2>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Customer Name</th>
              <th>Properties</th>
              <th>Method of Payment</th>
              <th>Card Number</th>
              <th>Date Ordered</th>
              <th>Status</th>
            </tr>
          </thead>        
          <tbody>
            <% orders.forEach(o => { %>
            <tr>
              <td><small><%= o.customer_name %></small></td>
              <td>
                <% o.products.forEach(p => { %>
                <small class="d-block font-weight-bold"><%= p.title %></small>
                <% }) %>
              </td>
              <td><small><%= o.payment_type %></small></td>
              <td><small><%= o.card_num %></small></td>
              <td><small><%= o.date_of_order %></small></td>
              <td>
                <span class="bg-warning badge badge-pill p-2"><%= o.order_status %></span>
              </td>
            </tr>
            <% }) %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
  
</div>

<%- include ('../partials/bottom') %>