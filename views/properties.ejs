<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Properties</h3>
      <div>
        <a href="/properties/new" class="btn btn-primary">Add Property</a>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <form id="search-form" method="GET" action="/properties?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Properties</h4>
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <th>Featured</th>
            <th>Property Title</th>
            <th>Description</th>
            <th>Type</th>
            <th>Mode</th>
            <th>Price (&#8358;)</th>
            <th>Location</th>
            <th>More Features</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% properties.forEach((m) => { %>
            <tr>
              <td> <img src='<%= m.images[0] %>' alt="<%= m.title %>" class="mini-square-thumbnail"></td>
              <td><small><%= m.title %></small></td>
              <td><small class="description"><%= m.description %></small></td>
              <td><small><%= m.category %></small></td>
              <td><small><%= m.property_mode %></small></td>
              <td><small><%= m.price %></small></td>
              <td><small><%= m.address + " " + m.city %></small></td>
              <td>
                <small><%= m.bedrooms %> Bedrooms</small><br>
                <small><%= m.bathrooms %> Bathrooms</small>
              </td>
              <td>
                <a href='<%= "/properties/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 

<%- include ('partials/bottom') %>