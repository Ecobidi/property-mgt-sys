<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Properties</h3>
      <div>
        <button class="btn btn-primary" data-toggle="modal" data-target="#modelId">Add Property</button>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <form action="/properties/new" method="POST" class="row" enctype="multipart/form-data">
        <div class="form-group col-6">
          <label>Property Title</label>
          <input required type="text" class="form-control" name="title">
        </div>
        <div class="form-group col-6">
          <label>Property Description</label>
          <textarea required class='form-control' name="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Optio nobis sapiente id cupiditate consequatur quisquam ullam ipsam tempore, et esse.</textarea>
        </div>
        <div class="form-group col-4">
          <label>Property Type</label>
          <select required name="category" class="form-control">
            <option></option>
            <% categories.forEach(c => { %>
              <option value='<%= c.name %>'><%= c.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-4">
          <label>Rent / Sale</label>
          <select required name="property_mode" class="form-control">
            <option></option>
            <option value='Sale'>Sale</option>
            <option value='Rent'>Rent</option>
          </select>
        </div>
        <div class="form-group col-4">
          <label>Address</label>
          <input type="text" name="address" class="form-control">
        </div>
        <div class="form-group col-4">
          <label>City</label>
          <input type="text" name="city" class="form-control">
        </div>
        <div class="form-group col-4">
          <label>Number of Bedrooms</label>
          <input type="number" required class="form-control" name="bedrooms">
        </div>
        <div class="form-group col-4">
          <label>Number of Bathrooms</label>
          <input type="number" required class="form-control" name="bathrooms">
        </div>
        <div class="form-group col-4">
          <label>Size (Area)</label>
          <input type="text" required class="form-control" name="size">
        </div>
        <div class="form-group col-4">
          <label>Property Price (&#8358;)</label>
          <input type="number" required class="form-control" name="price">
        </div>
        <div class="col-12">
          <div class="row">
            <div class="form-group col-4">
              <label>Featured Image</label>
              <input type="file" name="featured" class="form-control" accept="image/png, image/jpeg">
            </div>
            <div class="form-group col-4">
              <label>Image 1</label>
              <input type="file" name="image1" class="form-control" accept="image/png, image/jpeg">
            </div>
            <div class="form-group col-4">
              <label>Image 2</label>
              <input type="file" name="image2" class="form-control" accept="image/png, image/jpeg">
            </div>
            <div class="form-group col-4">
              <label>Image 3</label>
              <input type="file" name="image3" class="form-control" accept="image/png, image/jpeg">
            </div>
          </div>
        </div>
        
        <div class="my-3 col-12">
          <button class="btn btn-block btn-primary" type="submit">Proceed</button>
        </div>
      </form>
    </div>
  </div>
</main>
</div>
</div> 

<%- include ('partials/bottom') %>